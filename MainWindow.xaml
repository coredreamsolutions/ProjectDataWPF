<Window x:Class="ProjectDataWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectDataWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label FontSize="32" Content="{Binding CustomerNumber}" />
        <Label Margin="100,100,0,0" FontSize="32" Content="{Binding CustomerName}" />
        <Label Margin="100,130,0,0" FontSize="32" Content="{Binding CustomerAge}" />
        <Label Margin="100,160,0,0" FontSize="32" Content="{Binding CustomerAddress1}" />
        <Label Margin="100,190,0,0" FontSize="32" Content="{Binding CustomerAddress2}" />
        <Label Margin="100,220,0,0" FontSize="32" Content="{Binding CustomerMobileNumber}" />


    </Grid>
</Window>

    